

    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}

                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; hight: 24rem ">
                        <img class="card-img-top" src="/images/{{this._id}}.jpg" alt="Card image cap" style="height:13rem">
                        <div class="card-body">
                            <h5 class="card-title">{{this.category}}</h5>
                            <p class="card-text">{{this.discription}}</p>
                            <a href="#" class="btn btn-primary">Add to cart</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            </div>
        </div>
    </section>


   
